<!DOCTYPE html>
<html lang="en">
<base href="/" />

<%- include('partials/head', {title: 'Regiones' , css: 'regions.css' }) %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <section>
                    <h2 class="todas">Regiones Argentinas</h2>
                    <div class="region-showcase">
                        <% regions.forEach((region)=> { %>
                            <article class="region">
                                <a href="/products/regions/detail/<%= region.id %>">
                                    <img class="region-img" src="./img/regions/<%= region.img %>" alt="region image">
                                    <h5 class="region-name">
                                        <%= region.name %>
                                    </h5>
                                </a>
                            </article>
                            <% }); %>
                    </div>
                </section>
            </main>
            <script src="js/header.js"></script>
            <%- include('./partials/footer') %>
    </body>

</html>