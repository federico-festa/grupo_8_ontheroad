<!DOCTYPE html>
<html lang="en">
<base href="/" />
<%- include('partials/head', {title: 'Formulario de edición de región' , css: 'regionEdit.css' }) %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <h2 class="edit-title">Formulario de edición de región: <%= regionToEdit.name %>
                </h2>
                <div class="container">
                    <div class="form-container">
                        <form class="region-edit" action="/products/regions/edit/<%= regionToEdit.id %>?_method=PUT"
                            method="POST" enctype="multipart/form-data">
                            <div class="row-1">
                                <div class="c-1">
                                    <div class="input-container">
                                        <label for="name" class="label-container">Región:</label>
                                        <br>
                                        <input type="text" id="name" name="name" class="input"
                                            value="<%= regionToEdit.name%>">
                                        <div class="errors-msg">
                                            <div class="error"></div>
                                            <% if(locals.errors && errors.name) { %>
                                                <p>
                                                    <%= errors.name.msg %>
                                                </p>
                                                <% } %>
                                        </div>
                                    </div>
                                    <div class="input-container">
                                        <label for="weather" class="label-container">Clima:</label>
                                        <br>
                                        <input type="text" id="weather" name="weather" placeholder="Ej: Árido"
                                            class="input" value="<%= regionToEdit.weather%>">
                                        <div class="errors-msg">
                                            <div class="error2"></div>
                                            <% if(locals.errors && errors.weather) { %>
                                                <p>
                                                    <%= errors.weather.msg %>
                                                </p>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="button-container">
                                <button type="submit" class="submit-button">Guardar región</button>
                                <a href="/products/regions/delete/<%= regionToEdit.id %>"><button type="button"
                                        class="submit-button">Eliminar región</button></a>
                                <a href="/products/regions/edit/img/<%= regionToEdit.id %>"><button type="button"
                                        class="submit-button">Editar imagen</button></a>
                            </div>
                    </div>
                    </form>
                </div>
            </main>
            <script src="js/header.js"></script>
            <script src="js/regionEdit.js"></script>
            <%- include('./partials/footer') %>
    </body>

</html>