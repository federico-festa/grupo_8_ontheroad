<!DOCTYPE html>
<html lang="en">
<base href="/" />

<%- include('partials/head', {title: 'Tu busqueda' , css: 'search.css' }) %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <section class="c1">
                <% if(locals.products.length == 0) { %>
                    <h2 class="todas">No encontramos resultados para tu busqueda: <%= search %></h2>   
                    <br> 
                    <h3 class="not-found">Â¿Ya viste nuestras promociones?</h3>
                    <div class="product-showcase">
                        
                        <% promotions.forEach((product)=> { %>
                            <article class="product">
                                <a href="/products/detail/<%= product.id %>">
                                    <img src="./img/products/<%= product.img %>" alt="product image">
                                    <div class="product-description">
                                        <h5 class="name">
                                            <%= product.name %>
                                        </h5>
                                        <p class="shortDescription">
                                            <%= product.shortDescription %>
                                        </p>
                                        <p class="price">$<%= product.price %>
                                        </p>
                                    </div>
                                </a>
                            </article>
                            <% }); %>
                    </div>
                <% }else{ %> 
                <h2 class="todas">Encontramos estas experiencias para vos</h2>
                <div class="product-showcase">
                    <% products.forEach((product)=> { %>
                        <article class="product">
                            <a href="/products/detail/<%= product.id %>">
                                <img src="./img/products/<%= product.img %>" alt="product image">
                                <div class="product-description">
                                    <h5 class="name">
                                        <%= product.name %>
                                    </h5>
                                    <p class="shortDescription">
                                        <%= product.shortDescription %>
                                    </p>
                                    <p class="price">$<%= product.price %>
                                    </p>
                                </div>
                            </a>
                        </article>
                        <% }); %>
                </div>
                <% } %>
                </section>
            </main>
            <script src="/js/header.js"></script>
            <%- include('./partials/footer') %>
    </body>

</html>