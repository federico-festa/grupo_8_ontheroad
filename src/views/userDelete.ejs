                        <button type="submit" class="button">Si</button>
                        <a href="/user/profile"><button class="button" type="button">No</button></a>
                    </div>
                    </form>
                </div>
            </main>
            <script src="js/header.js"></script>
            <%- include('./partials/footer') %>
    </body>

</html>