<!DOCTYPE html>
<html lang="en">
<base href="/" />
<%- include('partials/head', {title: 'Eliminar región' , css: 'regionDelete.css' }) %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <div class="form-container">
                    <h1>¿Está seguro que desea eliminar la región <%= region.name %>?</h1>
                    <form class="form" action="/products/regions/delete/<%= region.id %>?_method=DELETE" method="POST">
                        <div class="button-container">
                            <button class="button" type="submit">Si</button>
                            <a href="/products/regions"><button class="button" type="button">No</button></a>
                        </div>
                    </form>
                </div>
            </main>
            <script src="js/header.js"></script>
            <%- include('./partials/footer') %>
    </body>

</html>