<!DOCTYPE html>
<html lang="en">
<base href="/" />

<%- include('partials/head', {title: 'Promociones' , css: 'promotions.css' }) %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <section>
                <h2 class="todas">Todas nuestras promociones:</h2>
                <div class="product-showcase">
                    <% promotions.forEach((product)=> { %>
                        <article class="product">
                            <a href="/products/detail/<%= product.id %>">
                                <img src="./img/products/<%= product.img %>" alt="product image">
                                <div class="product-description">
                                    <h5 class="name">
                                        <%= product.name %>
                                    </h5>
                                    <p class="descriptionShort">
                                        <%= product.descriptionShort %>
                                    </p>
                                    <p class="price">$<%= product.price %>
                                    </p>
                                </div>
                            </a>
                        </article>
                        <% }); %>
                </div>
                </section>
            </main>
    </body>
    <%- include('./partials/footer') %>

</html>